            Size="Size.ExtraSmall" 
            TValue="int" 
            Name="status" 
            buttons="true" 
            CheckedValue="@StatusValue"
            CheckedValueChanged="@OnStatusValueChanged">
    <Radio TValue="int" Value="@(-1)">All</Radio>
    <Radio TValue="int" Value="@(0)">On Hold</Radio>
    <Radio TValue="int" Value="@(1)">Open</Radio>
    <Radio TValue="int" Value="@(2)">Closed</Radio>
