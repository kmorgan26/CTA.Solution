@code {

    [Parameter]
    public int StatusValue { get; set; }

    [Parameter]
    public EventCallback<int> StatusValueChanged { get; set; }
    
    public async Task OnStatusValueChanged()
    {
        await StatusValueChanged.InvokeAsync(StatusValue);
    }

}
